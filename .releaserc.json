{
    "branches": [
        "main",
        {
            "name": "beta",
            "prerelease": true
        },
        {
            "name": "alpha",
            "prerelease": true
        }
    ],
    "plugins": [
        [
            "@semantic-release/commit-analyzer",
            {
                "preset": "conventionalcommits",
                "releaseRules": [
                    {
                        "type": "feat",
                        "release": "minor"
                    },
                    {
                        "type": "fix",
                        "release": "patch"
                    },
                    {
                        "type": "perf",
                        "release": "patch"
                    },
                    {
                        "type": "refactor",
                        "release": "patch"
                    },
                    {
                        "type": "style",
                        "release": "patch"
                    },
                    {
                        "type": "docs",
                        "release": "patch"
                    },
                    {
                        "type": "test",
                        "release": "patch"
                    },
                    {
                        "type": "build",
                        "release": "patch"
                    },
                    {
                        "type": "ci",
                        "release": "patch"
                    },
                    {
                        "type": "chore",
                        "release": "patch"
                    },
                    {
                        "breaking": true,
                        "release": "major"
                    },
                    {
                        "type": "feat",
                        "scope": "BREAKING CHANGE",
                        "release": "major"
                    }
                ]
            }
        ],
        [
            "@semantic-release/release-notes-generator",
            {
                "preset": "conventionalcommits",
                "writerOpts": {
                    "commitsSort": [
                        "subject",
                        "scope"
                    ]
                }
            }
        ],
        [
            "@semantic-release/changelog",
            {
                "changelogFile": "CHANGELOG.md"
            }
        ],
        [
            "@semantic-release/git",
            {
                "assets": [
                    "CHANGELOG.md",
                    "ragora/pyproject.toml",
                    "ragora/ragora/_version.py"
                ],
                "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
            }
        ],
        [
            "@semantic-release/github",
            {
                "assets": [
                    {
                        "path": "ragora/dist/*.whl",
                        "label": "Python Wheel"
                    },
                    {
                        "path": "ragora/dist/*.tar.gz",
                        "label": "Python Source Distribution"
                    },
                    {
                        "path": "database_server-*.tar.gz",
                        "label": "Database Server (tar.gz)"
                    },
                    {
                        "path": "database_server-*.zip",
                        "label": "Database Server (zip)"
                    }
                ],
                "successComment": "ðŸŽ‰ This PR is included in version ${nextRelease.version} of the package.",
                "releasedLabels": [
                    "released on ${nextRelease.gitTag}"
                ],
                "addReleases": "bottom"
            }
        ]
    ]
}