{
    "branches": [
        "main",
        {
            "name": "release/*.*",
            "prerelease": "rc"
        },
        {
            "name": "release/*.*.*",
            "prerelease": "rc"
        }
    ],
    "_comment": "Note: The release/*.* patterns accept any characters. Branch validation is enforced in .github/workflows/prerelease.yml to restrict to numbered versions (release/x.y or release/x.y.x)",
    "plugins": [
        [
            "@semantic-release/commit-analyzer",
            {
                "preset": "conventionalcommits",
                "from": "lastTagOnBranch",
                "releaseRules": [
                    {
                        "type": "feat",
                        "release": "minor"
                    },
                    {
                        "type": "fix",
                        "release": "patch"
                    },
                    {
                        "type": "perf",
                        "release": "patch"
                    },
                    {
                        "type": "refactor",
                        "release": "patch"
                    },
                    {
                        "type": "style",
                        "release": "patch"
                    },
                    {
                        "type": "docs",
                        "release": "patch"
                    },
                    {
                        "type": "test",
                        "release": "patch"
                    },
                    {
                        "type": "build",
                        "release": "patch"
                    },
                    {
                        "type": "ci",
                        "release": "patch"
                    },
                    {
                        "type": "chore",
                        "release": "patch"
                    },
                    {
                        "breaking": true,
                        "release": "major"
                    },
                    {
                        "type": "feat",
                        "scope": "BREAKING CHANGE",
                        "release": "major"
                    }
                ]
            }
        ],
        [
            "@semantic-release/release-notes-generator",
            {
                "preset": "conventionalcommits",
                "writerOpts": {
                    "commitsSort": [
                        "subject",
                        "scope"
                    ]
                }
            }
        ],
        [
            "@semantic-release/changelog",
            {
                "changelogFile": "CHANGELOG.md"
            }
        ],
        [
            "@semantic-release/git",
            {
                "assets": [
                    "CHANGELOG.md",
                    "ragora/pyproject.toml",
                    "ragora/ragora/_version.py"
                ],
                "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
            }
        ]
    ]
}